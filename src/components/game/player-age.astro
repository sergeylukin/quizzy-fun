<form
  x-data="playerAge"
  @submit.prevent="handleSubmit"
  class="group flex flex-col gap-6"
  :class="formValidate"
  novalidate
>
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
    <div class="flex flex-col gap-1">
      <input
        type="text"
        name="name"
        class="peer input input-bordered input-accent placeholder-black placeholder-opacity-50"
        placeholder="Name"
        required
        x-model="name"
      />

      <div class="hidden text-sm text-error group-[.validate]:peer-invalid:block">"We need this"</div>
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-secondary" :disabled="!name">Go</button>
    </div>
  </div>
</form>
